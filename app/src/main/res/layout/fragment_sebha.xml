<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SebhaFragment">



        <ImageView
            android:id="@+id/sebha_head"
            android:layout_width="90dp"
            android:layout_height="80dp"
            style="@style/sebhaHeadStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:adjustViewBounds="true"

            />

        <ImageView
            android:id="@+id/sebha_body"
            android:adjustViewBounds="true"
            android:layout_marginTop="115dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="3000dp"
            android:layout_height="250dp"
            style="@style/sebhaBodyStyle"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="400dp"
        >

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tasbehat"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"


        />

        <TextView
            android:id="@+id/number_of_tasbeh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            style="@style/numberOfTasbehStyle"
            android:background="@drawable/rounded_text_view"
            android:padding="15dp"
            tools:text="30"



            />


        <TextView
            android:id="@+id/azkar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="سبحان الله"
            android:background="@drawable/rounded_text_view"
            style="@style/TasbehStyle"
            android:padding="12dp"

            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"

            />



    </LinearLayout>



</FrameLayout>