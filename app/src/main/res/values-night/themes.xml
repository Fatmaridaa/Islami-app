<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IslamiApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.IslamiApp" parent="Base.Theme.IslamiApp" >

        <item name="colorPrimary">@color/blue_dark</item>
        <item name="android:statusBarColor">@color/blue_dark</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="statusBarBackground">@color/blue_dark</item>
    </style>

    <style name="splashScreenBg">
        <item name="android:background">@drawable/splash_bg_dark</item>
    </style>

    <style name="splashScreenLogo">

        <item name="android:src">@drawable/splash_logo_dark</item>
    </style>


    <style name="bottomNavigationStyle">

        <item name="android:background">@color/blue_dark</item>
        <item name="itemIconTint">@color/bottom_nav_selector_dark</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemTextColor"> @color/bottom_nav_selector_dark</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="islamic_bg">

        <item name="android:background">@drawable/islamic_bg_dark</item>
    </style>

    <style name="quranScreenImg">

        <item name="android:src">@drawable/quran_img_dark</item>
    </style>

    <style name="linesStyle">
        <item name="android:background">@color/yellow</item>
    </style>

</resources>