<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IslamiApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.IslamiApp" parent="Base.Theme.IslamiApp" >


        <item name="colorPrimary">@color/gold</item>
        <item name="android:statusBarColor">@color/gold_variant</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="statusBarBackground">@color/gold_variant</item>
    </style>

    <style name="splashScreenBg">
        <item name="android:background">@drawable/splash_bg</item>
    </style>


    <style name="bottomNavigationStyle">

        <item name="android:background">@color/gold</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemTextColor"> @color/bottom_nav_selector </item>

    </style>
    
    <style name="textStyle">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="islamic_bg">

        <item name="android:background">@drawable/islamic_bg</item>
    </style>

    <style name="splashScreenLogo">

        <item name="android:src">@drawable/splash_logo</item>
    </style>

    <style name="quranScreenImg">

        <item name="android:src">@drawable/quran_img</item>
    </style>


    <style name="linesStyle">
        <item name="android:background">@color/gold</item>
    </style>


<!--    sebha fragment styles-->


    <style name="sebhaHeadStyle">
        <item name="android:src">@drawable/sebha_head</item>
    </style>


    <style name="sebhaBodyStyle">

        <item name="android:src">@drawable/sebha_body</item>
    </style>


    <style name="numberOfTasbehStyle">

        <item name="android:backgroundTint">@color/light_gold</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="TasbehStyle">

        <item name="android:backgroundTint">@color/gold</item>
        <item name="android:textColor">@color/white</item>

    </style>





</resources>